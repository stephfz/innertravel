<h1>Listing issues</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Severity</th>
    <th></th>
    
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= issue.description %></td>
    <td><%= Severity.find_by_id(issue.severity).description %></td>
    <td><%= link_to 'Show', issue %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Report Issue', new_issue_path %>
